# Database
DATABASE_URL=postgresql://username:password@host:5432/swiftstay

# Auth
JWT_SECRET=your_jwt_secret_here

# Paystack
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxx

# Flutterwave
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-xxxxxxxx

# App
PORT=4000
NODE_ENV=production

# AI provider (set at least KEY; BASE is optional when using OpenAI official)
AI_PROVIDER=openai
AI_API_KEY=replace_with_your_key
AI_API_BASE= # leave empty for official OpenAI; or e.g. https://api.openai.com/v1
AI_MODEL=gpt-4o-mini   # or gpt-4o, or a compatible model name
